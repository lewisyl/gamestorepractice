@model Product
<div class="card card-outline-info m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            <span style="font-family: 'DotGothic16', sans-serif !important">@Model.Name</span>
            <span class="badge badge-pill badge-success" style="float:right">
                <small>@Model.Price.ToString("C2")</small>
            </span>
        </h4>
    </div>
    <form id="@Model.ProductID" asp-action="AddToCart"
          asp-controller="Cart" method="POST">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1" style="font-family: 'DotGothic16', sans-serif !important">
            @Model.Description
            <button type="submit"
                    class="btn btn-warning btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>